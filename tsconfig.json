{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "es2018"],
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true
    },
    "include": ["src/"]
}
